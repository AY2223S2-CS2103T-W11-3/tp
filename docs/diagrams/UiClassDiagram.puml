@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor UI_COLOR_T4
skinparam classBackgroundColor UI_COLOR

package UI <<Rectangle>>{
Class "<<interface>>\nUi" as Ui
Class "{abstract}\nUiPart" as UiPart
Class UiManager
Class MainWindow
Class HelpWindow
Class ResultDisplay
Class CardListPanel
Class CardElement
Class DeckName
Class DeckListPanel
Class DeckElement
Class StatusBarFooter
Class CommandBox
Class ReviewStatsPanel
Class ReviewStatsElement
Class NavGuide
Class ReviewElement
Class UnflippedReviewElement
}

package Model <<Rectangle>> {
Class HiddenModel #FFFFFF
}

package Logic <<Rectangle>> {
Class HiddenLogic #FFFFFF
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Ui

UiManager .left.|> Ui
UiManager -down-> "1" MainWindow
MainWindow *-down-->  "1" CommandBox
MainWindow *-down--> "1" ResultDisplay
MainWindow *-down-> "0..1" ReviewStatsPanel
MainWindow *-down---> "0..1" CardListPanel
MainWindow *-down--> "1" StatusBarFooter
MainWindow *-down-> "1" DeckListPanel
MainWindow *-down-> "0..1" DeckName

CardListPanel -down--> "*" CardElement
DeckListPanel -down--> "*" DeckElement
DeckListPanel -down----> "0..1" ReviewElement
DeckListPanel -down----> "0..1" UnflippedReviewElement
ReviewStatsPanel -down--> "3" ReviewStatsElement
ReviewStatsPanel -down--> "1" NavGuide
MainWindow --> "0..1" HelpWindow

MainWindow ---|> UiPart

CardElement ..> Model
DeckElement ..> Model
ReviewElement ..> Model
UnflippedReviewElement ..> Model
UiManager -right-> Logic
MainWindow -left-> Logic


HelpWindow -[hidden]left- CommandBox
DeckElement -[hidden]left- UnflippedReviewElement
ReviewCard-[hidden]left- UnflippedReviewElement
DeckElement -[hidden]left- ReviewElement
CommandBox -[hidden]left- ResultDisplay
ResultDisplay -[hidden]left- StatusBarFooter
StatusBarFooter -[hidden]left- UiPart
ReviewStatsPanel -[hidden]right- CardListPanel

MainWindow -[hidden]-|> UiPart
@enduml
